{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "index.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "@database_url"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}