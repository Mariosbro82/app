# Environment Configuration for Pension Calculator
# Copy this file to .env and update values

# Application
NODE_ENV=development
PORT=5000
LOG_LEVEL=debug
# Optional override for Vite base path (uncomment and set to '/app/' for GitHub Pages)
# VITE_BASE_PATH=/app/

# Database
DATABASE_URL=postgresql://pension_user:your_password_here@localhost:5432/pension_calculator
POSTGRES_USER=pension_user
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=pension_calculator
POSTGRES_PORT=5432

# Backend URL (for CORS)
BACKEND_URL=http://localhost:5000

# Session (if using session-based auth)
SESSION_SECRET=change_this_to_random_string_in_production

# JWT (if using JWT auth)
JWT_SECRET=change_this_to_random_string_in_production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Production Frontend URL
PRODUCTION_FRONTEND_URL=https://mariosbro82.github.io
